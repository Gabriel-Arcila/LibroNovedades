            if(idCentro != 0){
                listaLinea = await DataLinea.ObtenerLasLineasPorCentro(idCentro);
            }else{
                dataNove.IdLinea = 0;
            }
        }catch(Exception ex){
            mensaje = ex.Message;
        }
    }

